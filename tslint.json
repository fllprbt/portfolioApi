{
    "linterOptions": {
        "exclude": ["node_modules/*"]
    },
    "rulesDirectory": ["tslint-plugin-prettier"],
    "extends": ["tslint:latest", "tslint-react", "tslint-config-prettier"],
    "rules": {
        "array-bracket-spacing": [true, "never"],
        "block-spacing": true,
        "brace-style": [
            true,
            "1tbs",
            {
                "allowSingleLine": true
            }
        ],
        "class-name": true,
        "comment-format": [true, "check-space"],
        "completed-docs": false,
        "export-name": false,
        "import-name": false,
        "interface-name": [true, "always-prefix"],
        "jsdoc-format": true,
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "jsx-boolean-value": false,
        "label-position": true,
        "max-line-length": [true, 100],
        "member-access": [true, "no-public"],
        "member-ordering": [true, "fields-first"],
        "missing-jsdoc": false,
        "no-any": {
            "severity": "warning"
        },
        "no-arg": true,
        "no-backbone-get-set-outside-model": false,
        "no-bitwise": true,
        "no-boolean-literal-compare": true,
        "no-consecutive-blank-lines": true,
        "no-console": {
            "severity": "warning"
        },
        "no-construct": true,
        "no-debugger": {
            "severity": "warning"
        },
        "no-default-export": false,
        "no-duplicate-imports": true,
        "no-duplicate-variable": true,
        "no-else-after-return": true,
        "no-empty": true,
        "no-empty-interface": false,
        "no-eval": true,
        "no-floating-promises": false,
        "no-function-constructor-with-string-args": true,
        "no-http-string": false,
        "no-implicit-dependencies": false,
        "no-import-side-effect": false,
        "no-increment-decrement": true,
        "no-internal-module": true,
        "no-null-keyword": false,
        "no-parameter-reassignment": true,
        "no-relative-imports": false,
        "no-require-imports": false,
        "no-reserved-keywords": false,
        "no-shadowed-variable": true,
        "no-string-literal": true,
        "no-submodule-imports": false,
        "no-suspicious-comment": false,
        "no-switch-case-fall-through": true,
        "no-this-assignment": [
            true,
            {
                "allow-destructuring": true
            }
        ],
        "no-trailing-whitespace": true,
        "no-unused-expression": true,
        "no-unsafe-any": {
            "severity": "warning"
        },
        "no-use-before-declare": true,
        "no-var-keyword": true,
        "no-var-requires": false,
        "object-curly-spacing": [true, "always"],
        "object-literal-key-quotes": [true, "as-needed"],
        "object-literal-shorthand": true,
        "object-literal-sort-keys": false,
        "object-shorthand-properties-first": false,
        "one-line": [
            true,
            "check-catch",
            "check-else",
            "check-open-brace",
            "check-whitespace"
        ],
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "ordered-imports": false,
        "prefer-array-literal": true,
        "prefer-const": true,
        "prefer-template": true,
        "react-a11y-input-elements": false,
        "react-a11y-no-onchange": false,
        "react-no-dangerous-html": false,
        "react-this-binding-issue": [
            true,
            {
                "allow-anonymous-listeners": true
            }
        ],
        "space-before-function-paren": [
            true,
            {
                "anonymous": "always",
                "named": "never"
            }
        ],
        "space-in-parens": [true, "never"],
        "strict-boolean-expressions": false,
        "switch-default": true,
        "ter-computed-property-spacing": true,
        "ter-prefer-arrow-callback": [true],
        "triple-equals": [true, "allow-null-check"],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace",
                "parameter": "nospace"
            }
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "check-format",
            "allow-pascal-case",
            "allow-leading-underscore"
        ],
        "align": [true, "parameters", "statements"],
        "ban": false,
        "curly": [true, "ignore-same-line"],
        "eofline": true,
        "forin": true,
        "indent": [true, "spaces"],
        "prettier": [
            true,
            {
                "arrowParens": "always",
                "singleQuote": true,
                "tabWidth": 4,
                "trailingComma": "es5"
            }
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template",
            "jsx-double"
        ],
        "radix": true,
        "typedef": [true, "parameter", "property-declaration"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-module",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}
